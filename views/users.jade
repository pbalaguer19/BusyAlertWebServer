          li.active
            a(href='/users') Users logs
  

  input(type='text', name='userID', placeholder='Write a User ID')

  a(type='submit')
    button.btn.btn-primary.btn-lg(style='margin-top: 40px;') GET USER LOG
    
  a(href='/deleteuser', type='submit')
    button.btn.btn-primary.btn-lg(style='margin-top: 40px;') DELETE USER LOG
    
  // Sections
  section#all.sections.lightbg
    .container.text-center
      .heading-content
        h3 User Logs
                
        table.table
          thead
            tr
              th(style='text-align: center;') UserID
              th(style='text-align: center;') Action
              th(style='text-align: center;') Data
              
          for result in user
            -var extra = JSON.stringify(result.extraData);
            tbody
              tr
                td #{result.userId}
                td #{result.action}
                td #{extra}
              tr
                
