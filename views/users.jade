            a(href='/users') Users logs
    
  // Sections
  section#all.sections.lightbg
    .container.text-center
      .heading-content
        
        form(action='/users', method='get')
          input(type='text', name='userId', placeholder='Write a User ID')
          select(name='action')
            for action in actions
              option(value=action) #{action}
          br
          a(type='submit', name='show')
            button.btn.btn-primary.btn-lg(style='margin-top: 40px; margin-bottom: 40px;') GET USER LOG
                    
        h3 User Logs
        
        form(action='/users', method='get')        
        table.table
          thead
            tr
              th(style='text-align: center;') UserId
              th(style='text-align: center;') Action
              th(style='text-align: center;') Data
              
          for result in user
            tbody
              tr
                td #{result.userId}
                input(type='radio', name='userId', value=result.userId)
                td #{result.action}
                td #{result.extraData}
              tr
          a(type='submit', name='delete')
            button.btn.btn-primary.btn-lg(style='margin-top: 40px; margin-left: 40px; margin-bottom: 40px;') DELETE
                
