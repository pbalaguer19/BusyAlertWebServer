      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/') Home
          li.active
            a(href='#all') All logs
          li
            a(href='#newusers') New Users
          li
            a(href='#today') Today's logs
  
  // Sections
  section#all.sections.lightbg
    .container.text-center
      .heading-content
        h3 API
        h5 All logs:
        
        table.table
          thead
            tr
              th(style='text-align: center;') UserID
              th(style='text-align: center;') Action
              th(style='text-align: center;') Data
              
          for result in info
            -var extra = JSON.stringify(result.extraData);
            tbody
              tr
                td #{result.userId}
                td #{result.action}
                td #{extra}
              tr
          
  // Sections
  section#newusers.sections.lightbg
    .container.text-center
      .heading-content
        h5 New users:
        
        table.table
          thead
            tr
              th(style='text-align: center;') UserID
              th(style='text-align: center;') Data
              
          for result in newusers
            -var extra = JSON.stringify(result.extraData);
            tbody
              tr
                td #{result.userId}
                td #{extra}
              tr
                
  // Sections
  section#today.sections.lightbg
  .container.text-center
    .heading-content
      h5 Today's Logs:
      
      table.table
        thead
          tr
            th(style='text-align: center;') UserID
            th(style='text-align: center;') Action
            th(style='text-align: center;') Data
            
        for result in today
          -var extra = JSON.stringify(result.extraData);
          tbody
            tr
              td #{result.userId}
              td #{result.action}
              td #{extra}
            tr
      
